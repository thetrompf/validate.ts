{
    "compilerOptions": {
        "baseUrl": "src",
        "importHelpers": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noImplicitAny": true,
        "outDir": "build",
        "strictNullChecks": true,
        "target": "es2015",
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}
