{
    "extends": "./tsconfig.json",
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/__mocks__/*.ts",
        "src/**/__tests__/*.ts"
    ],
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "noEmitOnError": true,
        "outDir": "lib",
        "sourceMap": true
    }
}
